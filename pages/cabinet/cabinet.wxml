<!--pages/cabinet/cabinet.wxml-->
<view class='page'>
  <view class='profile'>
    <view>
      <image src='{{ sichu_user.avatar }}' mode='aspectFill' class='avatar'></image>
    </view>
    <view>
      <text>{{ sichu_user.username }}</text>
    </view>
  </view>
  <view class='bookown'>
    <view wx:for="{{ bookowns }}" wx:key="{{ item.id }}">
      <image src='{{ item.book.cover }}' class='cover {{ index % 3 < 2 ? "mr-10": "" }}'></image>
    </view>
  </view>
</view>